{
  "environment": "prod",
  "llm": {
    "model": "anthropic.claude-3-haiku-20240307-v1:0",
    "max_tokens": 500,
    "temperature": 0.3,
    "top_p": 0.9,
    "low_confidence_threshold": 0.3
  },
  "lexicon": {
    "s3_bucket": "lingible-lexicon-prod",
    "s3_key": "lexicon/latest.json"
  },
  "age_filtering": {
    "max_rating": "M18",
    "filter_mode": "skip"
  },
  "limits": {
    "free_daily_translations": 10,
    "premium_daily_translations": 100,
    "free_max_text_length": 50,
    "premium_max_text_length": 100,
    "free_history_retention_days": 0,
    "premium_history_retention_days": 30
  },
  "security": {
    "sensitive_field_patterns": ["*token*", "*secret*", "*key*", "*auth*"]
  },
  "observability": {
    "log_level": "INFO",
    "enable_tracing": true
  },
  "slang_validation": {
    "auto_approval_enabled": true,
    "auto_approval_threshold": 0.85,
    "web_search_enabled": true,
    "max_search_results": 5
  },
  "quiz": {
    "free_daily_limit": 10,
    "premium_unlimited": true,
    "questions_per_quiz": 10,
    "time_limit_seconds": 60,
    "points_per_correct": 10,
    "enable_time_bonus": true
  }
}

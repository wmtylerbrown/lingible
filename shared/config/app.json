{
  "app": {
    "name": "Lingible",
    "version": "1.0.0",
    "description": "GenZ slang translator"
  },

  "translation": {
    "context": "GenZ slang to formal English and vice versa",
    "max_concurrent": 5,
    "timeout_seconds": 30
  },

  "limits": {
    "free_daily_translations": 10,
    "free_max_text_length": 50,
    "free_history_retention_days": 0,
    "premium_daily_translations": 100,
    "premium_max_text_length": 100,
    "premium_history_retention_days": 30
  },

  "security": {
    "sensitive_field_patterns": ["*password*", "*token*", "*secret*", "*key*", "*auth*"],
    "bearer_prefix": "Bearer ",
    "jwt_expiration_seconds": 7200
  },

  "api": {
    "cors_headers": ["Content-Type", "Authorization"],
    "cors_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "pagination_default": 20,
    "pagination_max": 100,
    "timeout_ms": 30000,
    "max_retries": 3
  },

  "stores": {
    "apple_verify_url": "https://buy.itunes.apple.com/verifyReceipt",
    "apple_sandbox_url": "https://sandbox.itunes.apple.com/verifyReceipt",
    "google_api_timeout": 10
  }
}

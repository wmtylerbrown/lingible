{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "dist",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["bin/**/*.ts", "src/**/*.ts"],
  "exclude": ["cdk.out", "dist", "node_modules"]
}
